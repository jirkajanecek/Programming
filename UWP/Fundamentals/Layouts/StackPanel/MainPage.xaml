<Page
    x:Class="StackPanel.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StackPanel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid x:Name="MainGrid">
		
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto" />
		</Grid.ColumnDefinitions>

		<StackPanel x:Name="HorizontalStackPanel" 
					Grid.Row="0"
					Orientation="Horizontal">

			<Rectangle x:Name="HorizontalRed" Fill="Red" Width="50" />
			<Rectangle x:Name="HorizontalBlue" Fill="Blue" Width="50" />
			<Rectangle x:Name="HorizontalGreen" Fill="Green" Width="50" />
			<Rectangle x:Name="HorizontalYellow" Fill="Yellow" Width="50" />

		</StackPanel>

		<StackPanel x:Name="VerticalStackPanel"
					Grid.Row="1"
					Orientation="Vertical" >

			<Rectangle x:Name="VerticalRed" Fill="Red" Height="50" />
			<Rectangle x:Name="VerticalBlue" Fill="Blue" Height="50" />
			<Rectangle x:Name="VerticalGreen" Fill="Green" Height="50" />
			<Rectangle x:Name="VerticalYellow" Fill="Yellow" Height="50" />

		</StackPanel>

	</Grid>	
	
</Page>
